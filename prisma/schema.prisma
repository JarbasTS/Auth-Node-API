generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // Aqui vai o Hash, n√£o a senha real!
  createdAt DateTime @default(now())

  @@map("users") // Nome da tabela no banco
}